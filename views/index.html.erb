<h1>Listing todos</h1>

<table>
  <tr>
    <th>Title</th>
    <th>Description</th>
    <th>Due at</th>
    <th>Finished at</th>
  </tr>

<% for todo in @todos %>
  <tr>
    <td><%=h todo.title %></td>
    <td><%=h todo.description %></td>
    <td><%=h todo.due_at %></td>
    <td><%=h todo.finished_at %></td>
    <td><%= link_to 'Show', todo %></td>
    <td><%= link_to 'Edit', edit_todo_path(todo) %></td>
    <td><%= link_to 'Destroy', todo, :method => :delete %></td>
  </tr>
<% end %>
</table>

<br />

<%= link_to 'New todo', new_todo_path %>
