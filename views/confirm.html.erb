<%= h @todo.title %><br />
<%= h @todo.description %><br />
<%= @todo.due_at %><br />
<%= @todo.finished_at %><br />

<% form_tag({:status => :commit}, :method => request.method) do %>
<%= hidden_field :todo, :title %>
<%= hidden_field :todo, :description %>
<%= hidden_field :todo, :due_at %>
<%= hidden_field :todo, :finished_at %>
<%= submit_tag "save" %>
<% end %>

<% form_tag({:status => :back}, :method => request.method) do %>
<%= hidden_field :todo, :title %>
<%= hidden_field :todo, :description %>
<%= hidden_field :todo, :due_at %>
<%= hidden_field :todo, :finished_at %>
<%= submit_tag "back" %>
<% end %>
